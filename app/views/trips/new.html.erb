<div class="page-header">
  <h1>Add Trip</h1>
</div>

<% if @trip.errors.any? %>
  <% @trip.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_trip" class="form-horizontal">
  <!-- Label and input for from_city_id -->
  <div class="form-group">
    <label for="from_city_id" class="col-sm-2 control-label">
      From city
    </label>
    <div class="col-sm-10">
<%= select_tag(:from_city_id, options_from_collection_for_select(City.all, :id, :name), :class => "form-control") %>
    </div>
  </div>

  <!-- Label and input for to_city_id -->
  <div class="form-group">
    <label for="to_city_id" class="col-sm-2 control-label">
      To city
    </label>
    <div class="col-sm-10">
<%= select_tag(:to_city_id, options_from_collection_for_select(City.all, :id, :name), :class => "form-control") %>
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id" class="col-sm-2 control-label">
      User
    </label>
    <div class="col-sm-10">
      <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email), :class => "form-control") %>
    </div>
  </div>

  <!-- Label and input for time -->
  <div class="form-group">
    <label for="time" class="col-sm-2 control-label">
      Time
    </label>
    <div class="col-sm-10">
      <input type="text" id="time" name="time" placeholder="Time" class="form-control" value="<%= @trip.time %>">
    </div>
  </div>

  <!-- Label and input for cost -->
  <div class="form-group">
    <label for="cost" class="col-sm-2 control-label">
      Cost
    </label>
    <div class="col-sm-10">
      <input type="text" id="cost" name="cost" placeholder="Cost" class="form-control" value="<%= @trip.cost %>">
    </div>
  </div>

  <!-- Label and input for notes -->
  <div class="form-group">
    <label for="notes" class="col-sm-2 control-label">
      Notes
    </label>
    <div class="col-sm-10">
      <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"><%= @trip.notes %></textarea>
    </div>
  </div>

  <!-- Label and input for photo -->
  <div class="form-group">
    <label for="photo" class="col-sm-2 control-label">
      Photo
    </label>
    <div class="col-sm-10">
      <div class="panel-body">
                <div class="form-group">
                  <label for="exampleInputFile">File input</label>
                  <input type="file" id="exampleInputFile">
                </div>
              </div>
    </div>
  </div>

  <!-- Label and input for transportation -->
  <div class="form-group">
    <label for="transportation" class="col-sm-2 control-label">
      Transportation
    </label>
    <div class="col-sm-10">
    <%= select_tag(:transportation, options_for_select(["Bus", "Car", "Airplane"]), :class => "form-control") %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Trip" class="btn btn-primary">
    </div>
  </div>
</form>
